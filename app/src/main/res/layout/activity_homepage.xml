<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">


    <TextView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="-10sp"
        android:layout_marginStart="-1.7sp"
        android:background="@drawable/header"
        android:gravity="center"
        android:text="Booky"
        android:textSize="32sp"
        android:fontFamily="@font/montserrat"
        />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/icon"
            android:layout_marginTop="-42sp"
            android:layout_marginStart="88sp"/>

    <ImageView
        android:id="@+id/about"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/about"
        android:layout_marginTop="-34sp"
        />
    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:src="@drawable/search"
        android:layout_marginTop="-36sp"
        android:layout_marginStart="320sp"
        />

        <EditText
            android:id="@+id/search_enter"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:textSize="20sp"
            tools:ignore="InvalidId"
            android:visibility="gone"/>


    <ImageView
        android:id="@+id/sortName"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="310sp"
        android:src="@drawable/sort"/>



    <CheckBox android:id="@+id/checkbox_owned"
        android:layout_width="wrap_content"
        android:layout_marginTop="-30sp"
        android:layout_height="wrap_content"
        android:text="Somente possuidos:"
        android:onClick="onCheckboxClicked"/>

        

        <GridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="520sp"
        android:numColumns="3"/>

    <TextView
        android:id="@+id/nlivros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="270sp"
        android:textColor="#444"
        android:textSize="16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nautores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="270sp"
        android:textSize="14sp"

        android:text="TextView" />

    <ImageView
        android:id="@+id/add"
        android:layout_marginTop="-50sp"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginStart="145sp"
        android:src="@drawable/add"
        />
    </LinearLayout>
</ScrollView>