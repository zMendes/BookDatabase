<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="-10sp"
        android:background="@drawable/header"
        android:gravity="center"
        android:text="Booky"
        android:textSize="32sp" />
    <ImageView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/about"
        android:layout_marginTop="-38sp"
        />
    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_book"
        android:icon="@android:drawable/ic_menu_search"
        app:actionViewClass="android.widget.SearchView"
        app:showAsAction="always"
        android:layout_marginTop="-25sp"
        android:layout_marginStart="320sp"
        />

    <ImageView
        android:id="@+id/sortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290sp"
        android:src="@drawable/sort"/>
    <ImageView
        android:id="@+id/sortAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320sp"
        android:layout_marginTop="-31sp"
        android:src="@drawable/sort" />

    <CheckBox android:id="@+id/checkbox_owned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Somente possuidos:"
        android:onClick="onCheckboxClicked"/>



    <GridView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="607sp"
        android:numColumns="3"/>

    <ImageView
        android:id="@+id/add"
        android:layout_marginStart="140sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        />
</LinearLayout>